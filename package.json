{
  "name": "ramble-v2",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "start:dev": "npm run copy-files && cd server && tsc-watch --onSuccess \"npm start\"",
    "copy-files": "copyfiles -u 1 \"server/email-templates/**/*\" \"build\"",
    "build:client": "cd client && npm install --only=dev && npm install && npm run build",
    "heroku-postbuild": "cd server && tsc && cd .. && npm run copy-files && rm -rf server && npm run build:client",
    "generate": "cd server && graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MariaSolOs/ramble-v2.git"
  },
  "author": "Maria Solano",
  "license": "MIT",
  "homepage": "https://github.com/MariaSolOs/Ramble#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.4.4",
    "apollo-server-express": "^2.24.1",
    "bcrypt": "^5.0.1",
    "bl": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "mjml": "^4.9.3",
    "mongoose": "^5.13.2",
    "mongoose-lean-defaults": "^2.0.1",
    "path": "^0.12.7",
    "stripe": "^8.154.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "14.17.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.6",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript": "^1.22.4",
    "@graphql-codegen/typescript-operations": "^1.18.3",
    "@graphql-codegen/typescript-react-apollo": "^2.2.8",
    "@graphql-codegen/typescript-resolvers": "^1.19.5",
    "@types/bcrypt": "^5.0.0",
    "@types/mjml": "^4.7.0",
    "@types/node": "^16.0.0",
    "copyfiles": "^2.4.1",
    "tsc-watch": "^4.4.0"
  }
}
